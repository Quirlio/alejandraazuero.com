@import '_settings'

normalize-css()
base()

html,
body
  background: $black

html, html a
  -webkit-font-smoothing: antialiased

body,
p,
li
  font-family: 'Nunito Sans', sans-serif
  font-size: 21px
  font-weight: 400
  color: $white

.text-sm
  font-size: 18px

h1,
h2,
h3,
h4,
p,
li
  font-weight: 300 !important

ul
  padding-left: 0

a
  color: $green-light
  font-weight: 400

a:hover,
a:focus
  color: $green-light
  text-decoration: none

.link-main
  display: inline-block
  margin: 0 10px
  font-size: 18px
  font-weight: 600
  text-transform: uppercase

.btn-main
  border: 1.5px solid $green-light
  color: $green-light
  font-weight: 600

.top-right
  position: absolute
  top: 20px
  right: 20px

h1,
h2,
.title
  font-family: 'Karma', serif

h1.xl
  font-size: 122px

h1
  font-size: 41px
  line-height: 1.3 !important

h2
  font-size: 40px
  line-height: 1 !important

.container-outer
  padding: 30px 10px

.container-outer-compact
  padding: 50px 0

.block-full
  min-height: 100vh

.divider
  width: 100%
  height: 3px
  display: inline-block

.divider-black
  background: $black

.divider-white
  background: $white

.divider-green-light
  background: $green-light

.divider-green
  background: $green

.bg-green
  background: $green

.bg-white
  background: $white

.bg-white p,
.bg-white h1
  color: $black

.bg-black
  background: $black

.bg-grey
  background: $grey

.text-white
  color: $white

.bg-image
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;

.bg-profile
  background-image: url(/img/alejandra-azuero-quijano.jpg)
  min-height: 32vh

.bg-nuremberg-001
  background-image: url(/img/bg-nuremberg-001.jpg)

@media (min-width: 767px)

  h1
    font-size: 44px

  .container-outer
    padding: 120px 0
