@import '_settings'

normalize-css()
base()

html,
body
  background: $white

html, html a
  -webkit-font-smoothing: antialiased

body,
p,
li
  font-family: 'Nunito Sans', sans-serif
  font-size: 21px
  font-weight: 400
  color: $black

h1,
h2,
h3,
h4,
p,
li
  font-weight: 300 !important

ul
  padding-left: 0

a
  color: $blue-light
  font-weight: 400

a:hover,
a:focus
  color: $blue-light
  text-decoration: none

.link-main
  display: inline-block
  margin: 0 10px

h1,
h2,
.title
  font-family: 'Karma', serif

h1.xl
  font-size: 122px

h1
  font-size: 44px
  line-height: 1.2 !important

h2
  font-size: 40px
  line-height: 1 !important

.block-full
  min-height: 100vh

.divider
  width: 100px
  height: 3px
  display: inline-block

.divider-black
  background: $black

.divider-white
  background: $white

.divider-green-light
  background: $green-light

.divider-blue-light
  background: $blue-light

.bg-blue
  background: $blue

.bg-green
  background: $green

.bg-white
  background: $white

.bg-black
  background: $black

.text-white
  color: $white
